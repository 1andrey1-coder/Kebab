<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Kebab.ViewModels"
             x:Class="Kebab.XAML.Man"
             BindingContext="{DynamicResource viewModel}">

    <ContentPage.Resources>
        <viewmodel:ManView x:Key="viewModel"/>
    </ContentPage.Resources>
    
    <ContentPage.Content >
          <ScrollView >
            <ListView ItemsSource="{Binding List}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout  x:Name="ProductsCollection">
                             <Label Text="Вы во влажном мужике" HorizontalOptions="Center" Margin="4" FontAttributes="Bold"/>
                             <Label Text="Название категории" Margin="4" FontAttributes="Bold"/>
                             <Entry x:Name="CategorySvoyField" Placeholder="min 20 words"  />
                             <Button Text="Сохранить"  />
                             <Button Text="Удалить"  />
                        </StackLayout>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
          </ScrollView>
    </ContentPage.Content>
</ContentPage>